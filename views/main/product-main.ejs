<% layout('layout') -%>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1 class="text-center"> Find Your Favourite Product</h1>
    <p class="text-center">Search many of our products</p>
    <div class= "row">
      <div class="col-md-6 col-md-offset-3">
        <div class="input-group col-md-12">
          <input type="text" id="search" class="form-control input-lg" name="search_term" placeholder="Search for a Product">
          <span class="input-group-btn">
          <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search"></i></button>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">

  <div class="row" id="searchResults">

    <% for (var i = 0; i < products.length; i++) { %>
    <div class="col-sm-6 col-md-4">
      <a href="/product/<%= products[i]._id %>">
        <div class="thumbnail">
          <img src="<%= products[i].image %>">
          <div class="caption">
            <h3><%= products[i].name %></h3>
            <p class="description"><%= products[i].category.name %></h3>
            <div class="clearfix">
              <div class="price pull-left">$<%= products[i].price %></div>
              <!-- <a href="#" class="btn btn btn-success pull-right" role="button">Add to Cart</a> -->
            </div>
          </div>
        </div>
      </a>
    </div>
    <% } %>

    <ul class="pagination text-center">
      <li>
        <% for(var i = 1; i <= pages; i++) { %>
          <% if (i === 1)  {  %>
            <li><a href="/"><%= i %></a></li>
          <% } else { %>
            <li><a href="/page/<%= i %>"><%= i %></a></li>
          <% } %>
        <% } %>
      </li>
    </ul>

  </div>
</div>
