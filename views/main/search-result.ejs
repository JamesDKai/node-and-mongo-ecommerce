<% layout('layout') -%>

<% if (data.length === 0) { %>
  <h3>Search not found</h3>

<% } else { %>
  <h3>Results for <%= query %> </h3>
  <div class="container">
    <div class="row">
      <% for (var i = 0; i < data.length; i++) { %>
      <div class="col-sm-6 col-md-4">
        <a href="/product/<%= data[i]._source._id %>">
          <div class="thumbnail">
            <img src="<%= data[i]._source.image %>">
            <div class="caption">
              <h3><%= data[i]._source.name %></h3>
              <p class="description"><%= data[i]._source.category.name %></h3>
              <div class="clearfix">
                <div class="price pull-left">$<%= data[i]._source.price %></div>
                <!-- <a href="#" class="btn btn btn-success pull-right" role="button">Add to Cart</a> -->
              </div>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
<% } %>
