<% layout('layout') -%>

<div class="container">

  <div class="row">

    <% for (var i = 0; i < products.length; i++) { %>
    <div class="col-sm-6 col-md-4">
      <a href="/product/<%= products[i]._id %>">
        <div class="thumbnail">
          <img src="<%= products[i].image %>">
          <div class="caption">
            <h3><%= products[i].name %></h3>
            <p class="description"><%= products[i].category.name %></h3>
            <div class="clearfix">
              <div class="price pull-left">$<%= products[i].price %></div>
              <!-- <a href="#" class="btn btn btn-success pull-right" role="button">Add to Cart</a> -->
            </div>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>
